{
  "watch": [
    "*.js",
    "routes/**/*.js",
    "controllers/**/*.js",
    "Services/**/*.js",
    "models/**/*.js",
    "middlewares/**/*.js",
    ".env"
  ],
  "ignore": [
    "node_modules/**",
    "test/**",
    "*.test.js"
  ],
  "ext": "js,json",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 1000
}
